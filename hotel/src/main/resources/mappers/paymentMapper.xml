<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hotel.dao.PaymentDao">
    <resultMap id="paymentResultMap" type="com.example.hotel.dto.Payment">
        <result column="payment_id" property="paymentId"/>
        <result column="pay_id" property="payId"/>
        <result column="amount" property="amount"/>
    </resultMap>

    <insert id="addPayment" parameterType="com.example.hotel.dto.Payment">
        INSERT INTO payment (payment_id, pay_id, amount)
        VALUES (#{paymentId}, #{payId}, #{amount})
    </insert>

    <select id="calculateAmount" resultType="int">
        SELECT (r.checkout - r.checkin) * ro.price AS amount
        FROM reservation r
        JOIN room ro ON r.room_id = ro.room_id
        WHERE r.pay_id = #{payId}
    </select>
</mapper>